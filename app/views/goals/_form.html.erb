<%= form_for([@strategy, @strategy.goals.build]) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, { 'rows' => 5 } %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Goal', :class => 'btn' %>
  </div>
<% end %>
