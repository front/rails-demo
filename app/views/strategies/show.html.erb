<p id="notice"><%= notice %></p>

<div style="text-align: center">
  <span class="muted">Strategy for:</span>
  <h1 contenteditable="true">
    <%= @strategy.title %>
  </h1>
  <hr>
  <p class="lead"><span class="muted">Vision:</span> <span contenteditable="true"><%= @strategy.vision %></span>
  <hr>
  </p>
</div>

<div class="row">
  <% @strategy.goals.each do |goal| %>
    <div class="goal span6">
      <div class="well">  
        <div style="text-align: center">

          <span class="muted" style="text-align: center">Goal 1</span>

            <h2><%= goal.title %></h2>
            <hr>

            <!-- <p><%= goal.description %></p> -->
            <div class="tasks" style="text-align: left">
              <h4 class="muted">To achieve this goal, I will:</h4>

              <% goal.tasks.each do |task| %>
                <h3><%= task.title %></h3>
                <p><%= task.description %></p>
              <% end %>
            </div>

        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Button to trigger modal -->
<a href="#myModal" role="button" class="btn btn-primary btn-block" data-toggle="modal">Add new goal</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><span class="muted" style="text-align: center">Goal description ...</span></h3>
  </div>
  <div class="modal-body">
    <h4 class="muted" contenteditable="true">To achieve this goal, I will</h4>
    <div class="well">
      <input class="input-xlarge" type="text" placeholder="Action ...">
      <input class="input-xlarge" type="text" placeholder="Challenges ...">
      <input class="input-xlarge" type="text" placeholder="Starting date">
    </div>
    <a class="btn btn-small" href="#"><i class="icon-plus"></i> Add action</a>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>

<%= link_to 'Edit', edit_strategy_path(@strategy) %> |
