<p id="notice"><%= notice %></p>

<div class="strategy align-center">
  <div class="btn-group">
    <%= link_to 'Edit', edit_strategy_path(@strategy), :class => 'btn' %>
    <%= link_to 'Back', strategies_path, :class => 'btn' %>
  </div>

  <span class="muted">Strategy for:</span>
  <h1><%= @strategy.title %></h1>
  <hr>
  <p class="lead"><span class="muted">Vision:</span> <%= @strategy.description %></p>
</div>

<hr>

<!-- GOALS -->
<div class="row">
  <%= render @strategy.goals %>
</div>

<div class="align-center">
  <%= link_to 'Add new goal', '#addGoal',
                              :class => 'btn btn-large btn-primary',
                              :role => 'button',
                              'data-toggle' => 'modal'
                              %>
</div>

<!-- Modal -->
<div id="addGoal" class="modal hide fade" tabindex="-1" role="dialog">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>New goal</h3>
  </div>
  <div class="modal-body">
    <%= render 'goals/form' %>
  </div>
</div>
