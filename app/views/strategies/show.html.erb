<p id="notice"><%= notice %></p>

<div style="text-align: center">
  <span class="muted">Strategy for:</span>
  <h1 contenteditable="true">
    <%= @strategy.title %>
  </h1>
  <hr>
  <p class="lead"><span class="muted">Vision:</span> <span contenteditable="true"><%= @strategy.vision %></span>
  <hr>
  </p>
</div>

<div class="row">
  <% @strategy.goals.each do |goal| %>
    <div class="goal span6">
      <div class="well">  
        <div style="text-align: center">

          <span class="muted" style="text-align: center">Goal 1</span>

            <h2><%= goal.title %></h2>
            <hr>

            <!-- <p><%= goal.description %></p> -->
            <div class="tasks" style="text-align: left">
              <h4 class="muted">To achieve this goal, I will:</h4>

              <% goal.tasks.each do |task| %>
                <h3><%= task.title %></h3>
                <p><%= task.description %></p>
              <% end %>
            </div>

        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_strategy_path(@strategy) %> |
<%= link_to 'Back', strategies_path %>
