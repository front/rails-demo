<%= form_for([@strategy, goal, goal.tasks.build]) do |f| %>
  <div class="field">
    <%= f.text_field :title,
                     :placeholder => 'Name your task',
                     :class => 'span5' %>
  </div>
  <div class="field">
    <%#= f.label :description %>
    <%= f.text_area :description,
                    :rows => 3,
                    :placeholder => 'Describe your task',
                    :class => 'span5' %>
  </div>
  <div class="field">
    <%= f.label :duedate %>
    <%= f.date_select :duedate %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Task',
                 :class => 'btn btn-success' %>
  </div>
<% end %>
